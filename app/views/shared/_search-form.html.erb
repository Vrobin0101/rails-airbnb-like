<%= form_tag offers_path, method: :get, class: "simple_form search" do %>
<div class="search-form-control form-group">
  <%= text_field_tag :query, params[:query], class: "form-control string required", id: "search_query", placeholder: "Find your next sport gear" %>
  <button name="button" type="submit" class="btn btn-flat">
    <i class="fas fa-search"></i>
  </button>
</div>
<% end %>
