<h1><%= @offer.product_name.upcase %></h1>

<div class="container offer-details">

  <div class="card">
    <p>You have searched equipments for <strong><%= @offer.category.capitalize %></strong> in this area : <%= @offer.location %></p>
  </div>

  <div class="card">
      <p>This is a <%= @offer.product_name %></p>
      <p>The renter is located in <%= @offer.location %></p>
  </div>

  <div class="card">
    <p>This product is offered by the renter <strong><%= @offer.user.first_name %></strong></p>
  </div>
</div>

<div class="container img-and-form">
  <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @offer.photo.key %>)"></div>

  <div class="form-container">
      <%= simple_form_for [@offer, @booking], data: { controller: 'flatpickr' } do |f| %>
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit %>
      <% end %>
  </div>
</div>
