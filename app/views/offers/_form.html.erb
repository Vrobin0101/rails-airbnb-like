<div class="form py-3">
  <%= simple_form_for(offer) do |f| %>
  <div class="d-flex flex-row justify-content-between">
    <%= f.input :product_name, placeholder: 'Shin guard'%>
    <%= f.input :category, placeholder: 'Football'%>
  </div>
  <%= f.input :description, placeholder: 'Get the best shield to avoid nasty injuries'%>
  <%#= f.input :location, placeholder: '16 Villa Gaudelet 75011 Paris'%>
  <%= f.input :location,
    input_html: {data: {address_autocomplete_target: "address"}},
    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}},
    class: "d-none"
  %>
  <%= f.input :price, placeholder: 'In euros per hour', input_html: { min: '0', step: 'any' }%>
  <%= f.input :photo, as: :file %>
  <%= f.submit 'Create gear', class:'btn btn-large'%>
  <% end %>
</div>
