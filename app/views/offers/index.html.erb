<div class="container index-offer-container">
    <div id="offers">
        <% @offers.each do |offer| %>
            <%= render offer %>
        <% end %>
    </div>

    <div id="map-offers",
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
